/* pages/campusWalls/campusWalls.wxss */
page {
  box-sizing: border-box;
  padding-bottom: calc(env(safe-area-inset-bottom) + 96rpx);
  background: #EDECF3FF;
}

.main-container {
  width: 100%;
  height: 2000px;
}

.campus-walls-post-item {
  width: 100%;
  background: #fff;
  margin-top: 5px;
}

.campus-walls-post-title {
  width: 100%;
  height: 50px;
  /* border: red solid 1px; */
  display: flex;
  align-items: center;
  padding: 5px 10px;
}

.campus-walls-post-avatar {
  width: 48px;
  height: 48px;
  border-radius: 50%;
}

.campus-walls-post-info-box {
  height: 48px;
  margin-left: 10px;
  display: flex;
  flex-direction: column;
}

.campus-walls-post-userNickName {
  font-size: 16px;
  font-weight:bolder;
  margin-top: 7px;
}

.campus-walls-post-post-date {
  font-size: 11px;
  color: rgb(149, 147, 153)
}

.campus-walls-post-content {
  width: 100%;
  height: auto;
  padding-left: 20px;
  padding-right: 10px;
  margin-top: 5px;
  margin-bottom: 10px;
  font-size: 14px;
  /* border: red solid 1px; */
}

.campus-walls-post-operate-button-box {
  width: 100%;
  height: 32px;
  /* border: black solid 1px; */
  display: flex;
  justify-content: flex-end;
  align-items: center;
  margin-top: 20px;
}

.campus-walls-post-like-button {
  /* background: greenyellow; */
  margin-right: 100px;
}

.campus-walls-post-like-button-icon {
  width: 24px;
  height: 24px;
}