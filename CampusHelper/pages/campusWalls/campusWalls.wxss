/* pages/campusWalls/campusWalls.wxss */
page {
  box-sizing: border-box;
  padding-bottom: calc(env(safe-area-inset-bottom) + 96rpx);
  background: #EDECF3FF;
}

.main-container {
  width: 100%;
  height: 2000px;
}

.campus-walls-post-item {
  width: 100%;
  background: #fff;
  margin-top: 5px;
}

.campus-walls-post-title {
  width: 100%;
  height: 50px;
  /* border: red solid 1px; */
  display: flex;
  align-items: center;
  padding: 5px 10px;
}

.campus-walls-post-avatar {
  width: 48px;
  height: 48px;
  border-radius: 8px;

}

.campus-walls-post-userNickName {
  margin-left: 10px;
  font-size: 16px;
  font-weight:bolder;
}

.campus-walls-post-content {
  width: 100%;
  height: auto;
  padding-left: 10px;
  padding-right: 10px;
  padding-bottom: 50px;
  font-size: 14px;
  /* border: red solid 1px; */
}