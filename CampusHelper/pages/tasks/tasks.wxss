/* pages/tasks/tasks.wxss */
page {
  box-sizing: border-box;
  padding-bottom: calc(env(safe-area-inset-bottom) + 96rpx);
  background: #EDECF3FF;
}

.tasks-page-header {
  height: auto; /* 这里200px是暂时设置的，后面要改成auto */
  margin-top: 100px;
  /* border: red solid 1px; */
  /* background: white; */
  border-bottom-left-radius: 10%;
  border-bottom-right-radius: 10%;
}

.task-filter-bar {
  width: 100%;
  height: 38px;
  background: white;
  margin: 5px auto;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-radius: 10px;
  /* border: black solid 1px;  测试用线  */
}

.task-filter-bar-all-button, .task-filter-bar-waimai-button, .task-filter-bar-qukuaidi-button, .task-filter-bar-jikuaidi-button, .task-filter-bar-quanneng-button{
  margin: 0 auto;
}

/* 普通颜色样式 */
.text-normal {
  color: black;
  font-size: 14px;
  font-weight: 500;
}

/* 点击后变成蓝色 */
.text-blue {
  color: #1296db;
  font-size: 14px;
  font-weight: 500;
}

.tasks-page-body {
  width: 100%;
  height: 2000px;
}