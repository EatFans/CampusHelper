page {
  box-sizing: border-box;
  padding-bottom: calc(env(safe-area-inset-bottom) + 96rpx);
  background: #EDECF3FF;
}

.mine-page-header {
  /* margin-top: 0px; */
  height: 180px;
  /* border: black solid 1px; */
                                                                                      
  background:#2775b6;
  border-bottom-left-radius: 8px;
  border-bottom-right-radius: 8px;
}

.header-user-info-box {
  width: 96%;
  height: 100px;
  margin: 0 auto;
  display: flex;
  flex-direction: row;
  /* border: red solid 1px; */
}

.not-login-text {
  margin-top: 25%;
  margin-left: 20px;
  font-weight: 800;
  font-size: 18px;
}

.user-info-avatar-wrapper {
  width: 82px;
  height: 82px;
  border-radius: 50%;
  margin-left: 10px;
  margin-top: 80px;
}
.user-info-avatar-wrapper image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.user-info-text-box {
  width: auto;
  height: auto;
  margin-top: 24%;
  margin-left: 20px;
  display: flex;
  flex-direction: column;

  /* border: black solid 1px; */
}

.user-info-text-box-row {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.user-info-username {
  font-weight: 600;
  font-size: 18px;
}

.user-info-university {
  margin-top: 5px;
  margin-left: 2px;
  font-size: 12px;
  color: white;
}

.real-name-authentication-label {
  height: 20px;
  width: 70px;
  margin-left: 10px;
  font-size: 12px;
  background: #E9E9EAFF;
  border-radius: 8px;
  display: flex;
  align-items: center;
  justify-content: center;
}


.mine-page-body {
  width: 100%;
  
}

.user-data-info-container {
  width: 100%;
  height: 80px;
  margin-top: 15px;
  /* border: black solid 1px; */
}

.user-data-info {
  width: 96%;
  height: 100%;
  margin: 0 auto;
  background: white;
  border-radius: 12px;
  display: flex;
  align-items: center;
  box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1),
              0px -4px 8px rgba(0, 0, 0, 0.1),
              4px 0px 8px rgba(0, 0, 0, 0.1),
              -4px 0px 8px rgba(0, 0, 0, 0.1);
}

.user-data-info-row {
  width: 100%;
  height: 80%;
  display: flex;
  flex-direction: row;
  /* background: red; */
}

.user-data-info-item {
  height: 100%;
  width: 15%;
  /* background: green; */
  margin: 0 auto;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  
}

.user-data-info-item-value-text {
  font-size: 18px;
  font-weight: 600;
}

.user-data-info-item-key-text {
  font-size: 14px;
  font-weight: 400;
}


.commonly-used-tools-container {
  width: 100%;
  height: 150px;
  margin-top: 25px;
  /* border: black solid 1px; */
}

.commonly-used-tools {
  width: 90%;
  height: 100%;
  margin: 0 auto;
  background: white;
  border-radius: 12px;
  display: flex;
  flex-direction: column;
  box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1),
              0px -4px 8px rgba(0, 0, 0, 0.1),
              4px 0px 8px rgba(0, 0, 0, 0.1),
              -4px 0px 8px rgba(0, 0, 0, 0.1);
}

.commonly-used-tools-title {
  width: 100%;
  height: 20px;
  /* background: red; */
  display: flex;
  align-items: center;
}

.commonly-used-tools-title text {
  font-size: 16px;
  font-weight: 400;
  margin-left: 10px;
  margin-top: 10px;
}

.commonly-used-tools-row {
  width: 100%;
  height: 65%;
  margin: auto 0;
  /* background: red; */
}

.my-services-container {
  width: 100%;
  height: 320px;
  margin-top: 25px;
  /* border: black solid 1px; */
}

.my-services {
  width: 90%;
  height: 100%;
  margin: 0 auto;
  background: white;
  border-radius: 12px;
  box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1),
              0px -4px 8px rgba(0, 0, 0, 0.1),
              4px 0px 8px rgba(0, 0, 0, 0.1),
              -4px 0px 8px rgba(0, 0, 0, 0.1);
}

.my-services-title {
  width: 100%;
  height: 20px;
  /* background: red; */
  display: flex;
  align-items: center;
}

.my-services-title text {
  font-size: 16px;
  font-weight: 400;
  margin-left: 10px;
  margin-top: 5px;
}

.my-services-row {
  margin-top: 10px;
  width: 100%;
  height: 120px;
  display: flex;
  flex-direction: row;
  /* background: red; */
}

.my-services-item {
  width: 18%;
  height: 100%; /* 86%适合这个功能图标高度 */
  /* background: green; */
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items:center;
  margin: 0 auto;
}

.my-services-item-icon {
  width: 36px;
  height: 36px;
}

.my-services-item-icon image {
  width: 100%;
  height: 100%;
}

.my-services-item text {
  margin-top: 15px;
  font-size: 14px;
  font-weight: 400;
}

