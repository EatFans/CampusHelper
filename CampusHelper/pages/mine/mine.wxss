page {
  box-sizing: border-box;
  padding-bottom: calc(env(safe-area-inset-bottom) + 96rpx);
  background: #EDECF3FF;
}

.mine-page-header {
  /* margin-top: 0px; */
  height: 250px;
  /* border: black solid 1px; */
                                                                                      
  background: white;
  border-bottom-left-radius: 8px;
  border-bottom-right-radius: 8px;
}

.header-user-info-box {
  width: 96%;
  height: 100px;
  margin: 0 auto;
  display: flex;
  flex-direction: row;
  /* border: red solid 1px; */
}

.not-login-text {
  margin-top: 25%;
  margin-left: 20px;
  font-weight: 800;
  font-size: 18px;
}



.user-info-avatar-wrapper {
  width: 82px;
  height: 82px;
  border-radius: 50%;
  margin-left: 10px;
  margin-top: 80px;
}
.user-info-avatar-wrapper image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.user-info-text-box {
  width: auto;
  height: auto;
  margin-top: 24%;
  margin-left: 20px;
  display: flex;
  flex-direction: column;

  /* border: black solid 1px; */
}

.user-info-text-box-row {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.user-info-username {
  font-weight: 600;
  font-size: 18px;
}

.real-name-authentication-label {
  height: 20px;
  width: 70px;
  margin-left: 5px;
  font-size: 12px;
  background: #E9E9EAFF;
  border-radius: 8px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.mine-page-body {
  width: 100%;
  
}

.commonly-used-tools-container {
  width: 100%;
  height: 180px;
  margin-top: 25px;
  /* border: black solid 1px; */
}

.commonly-used-tools {
  width: 96%;
  height: 100%;
  margin: 0 auto;
  background: white;
  border-radius: 12px;
  box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1),
              0px -4px 8px rgba(0, 0, 0, 0.1),
              4px 0px 8px rgba(0, 0, 0, 0.1),
              -4px 0px 8px rgba(0, 0, 0, 0.1);
}

.my-services-container {
  width: 100%;
  height: 350px;
  margin-top: 25px;
  /* border: black solid 1px; */
}

.my-services {
  width: 96%;
  height: 100%;
  margin: 0 auto;
  background: white;
  border-radius: 12px;
  box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1),
              0px -4px 8px rgba(0, 0, 0, 0.1),
              4px 0px 8px rgba(0, 0, 0, 0.1),
              -4px 0px 8px rgba(0, 0, 0, 0.1);
}