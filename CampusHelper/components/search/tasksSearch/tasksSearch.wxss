/* components/search/tasksSearch/tasksSearch.wxss */
.tasks-search-container {
  width: 96%;
  height: 35px;
  margin: 5px auto;
  background: #E9E9EAFF;
  border-radius: 20px;
  display: flex;
  align-items: center;
  flex-direction: row;
}

.tasks-search-icon {
  width: 16px;
  height: 16px;
  margin-left: 10px;
  margin-right: 5px;
}

.tasks-search-icon image {
  width: 100%;
  height: 100%;
}

.tasks-search-input {
  width: 100%;
  height: 100%;
}