/* components/home-menu/home-menu.wxss */
.home-menu {
  width: 96%;
  height: 105px;
  margin-left: auto;
  margin-right: auto;
  background: white;
  border-radius: 12px;
}

.home-menu-container {
  
  /* border:  black solid 1px; */
  display: flex;
  justify-content: center;
  align-items: flex-end;
  margin-top: 15px;
  
  border-radius: 12px;
}

.home-menu-content {
  width: 200%;
  height: 100px;
  display: flex;
  flex-direction: row;
  
  /* background: red; */
}

.home-menu-item {
  width: 12.5%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  /* border: black solid 1px; */
}

.home-menu-item-icon {
  width: 48px;
  height: 48px;
  margin-top: 10px;
}

.home-menu-item-text {
  margin-top: 5px;
  font-size: 14px;
  font-size: 400;
  color: black;
}

/* 指示器容器 */
.indicator-container {
  display: flex;
  justify-content: center;
}

/* 单个指示点 */
.indicator {
  width: 10px;
  height: 3px;
  background-color: #ccc;
  margin: 0 1px;
  border-radius: 12px;
}
