.nav-bar-container {
  width: 100%;
  height: 94px;
  background: #f0d84d;
  display: flex;
  align-items: flex-end;
}

.nav-bar-content {
  width: 100%;
  height: 40px;
  display: flex;
  align-items: center; /* 在纵向上居中对齐 */
  justify-content: center; /* 在横向上居中对齐 */
  position: relative; /* 使标题绝对定位相对于 nav-bar-content */
}

.nav-bar-back-button {
  width: 40px;
  height: 40px;
  /* background: red; */
  position: absolute; /* 绝对定位 */
  left: 0; /* 靠左对齐 */
  display: flex; /* 使用 flexbox */
  align-items: center; /* 垂直居中 */
  justify-content: center; /* 水平居中 */
}

.nav-bar-back-button-icon {
  width: 16px;
  height: 16px;
}

.nav-bar-back-button-icon-image{
  width: 100%;
  height: 100%;
}

.nav-bar-title  {
  height: 40px;
  /* background: green; */
  text-align: center; /* 文本水平居中 */
  line-height: 40px; /* 使文本垂直居中 */
  flex-grow: 1; /* 使标题区域扩展，保持居中 */
}